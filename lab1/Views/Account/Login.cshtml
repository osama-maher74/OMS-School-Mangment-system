@using lab1.Models.ViewModel
@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure a layout is used for styling
}

<style>
    /* Define the ITI Brand Color */
    :root {
        --iti-brand-red: #CC0000;
    }

    /* Custom class for the solid red button */
    .btn-brand {
        background-color: var(--iti-brand-red);
        border-color: var(--iti-brand-red);
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-brand:hover {
            background-color: #A30000; /* Darker red on hover */
            border-color: #A30000;
        }

    /* Custom class for the solid red background element (e.g., card header) */
    .bg-brand {
        background-color: var(--iti-brand-red) !important;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <div class="card shadow-lg p-4">

            <div class="card-header text-center bg-brand text-white">
                <h3 class="mb-0"> User Login</h3>
            </div>

            <div class="card-body">
                <form method="post">

                    <div class="form-group mb-3">
                        <label asp-for="UsserName" class="form-label"></label>
                        <input type="text" asp-for="UsserName" class="form-control" placeholder="Enter your username" />
                        <span asp-validation-for="UsserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-brand btn-lg">
                            Login
                        </button>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mt-3 text-center"></div>
                </form>
            </div>

            <div class="card-footer text-center">
                <small class="text-muted">Need an account? <<a asp-controller="Account" asp-action="Register" style="color: var(--iti-brand-red);">Register here</a></small>
            </div>
        </div>

    </div>
</div>