@model Departments
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DeptID" />
   
    <div class="form-group">
        <label asp-for="DeptName"></label>
        <input asp-for="DeptName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <button asp-action="Edit" asp-controller="Department" class="btn btn-primary">Save</button>
</form>
