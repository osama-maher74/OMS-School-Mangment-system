    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lab1.styles.css" asp-append-version="true" />

    <!-- Custom Style Block for Red Theme -->
    <style>
        /* Define the primary red color for the Navbar */
        .bg-iti-red {
            background-color: #CC0000 !important; /* Strong Red */
        }
        /* Ensure all links and text inside the navbar are white */
        .navbar-iti .nav-link, 
        .navbar-iti .navbar-brand,
        .navbar-iti .navbar-toggler-icon {
            color: #FFFFFF !important;
        }
    </style>
</head>
<body>
    <header>
        <!-- Applied custom classes for the red and white theme -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-iti-red border-bottom box-shadow mb-3 navbar-iti">
            <div class="container-fluid">
                <!-- Brand is now white text -->
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">OMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Changed all link colors to text-white for contrast -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="AdminUser" asp-action="Index">Users</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {


                            @if (!User.IsInRole("Student"))
                            {

                                <li class="nav-item dropdown">
                                    <!-- Dropdown toggle link is white -->
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Department
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/department/index">Department List</a></li>
                                        <li><a class="dropdown-item" href="/department/Create">Create Department</a></li>
                                        <li><hr class="dropdown-divider"></li>

                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <!-- Dropdown toggle link is white -->
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Students
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Student/index">Student List</a></li>
                                        <li><a class="dropdown-item" href="/Student/Create">Create Student</a></li>
                                        <li><hr class="dropdown-divider"></li>

                                    </ul>
                                </li>
                               
                            }
                        }
                        <!-- Authentication links are now white -->
                        @* <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="login">Login</a>
                        </li> *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="account" asp-action="logout">Logout</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
