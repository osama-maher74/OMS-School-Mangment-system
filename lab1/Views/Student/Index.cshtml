@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<h1> Student Index</h1>

    
<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr style="text-align:center;">
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Department</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
    @foreach (var student in Model)
    {
            <tr style=" text-align:center;">
            <td>@student.Id</td>
            <td>@student.Name</td>
				<td>@student.Email</td>
            <td>@student.Age</td>
            <td>@student.Department?.DeptName </td>
            <td>
                    <a class="btn btn-success" asp-action="Details" asp-controller="Student" asp-route-id="@student.Id">Details</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>