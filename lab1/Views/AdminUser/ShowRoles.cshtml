@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "ShowRoles";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">System Roles</h1>

    <p>
        <a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
    </p>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Role ID</th>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            @role.Id
                        </td>
                        <td>
                            <strong>@role.Name</strong>
                        </td>
                        <td>
                            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No roles are currently registered in the system.</td>
                </tr>
            }
        </tbody>
    </table>
</div>